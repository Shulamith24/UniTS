{
  "version": "0.2.0",
  "configurations": [
  
    {
      "name": "Pretrain UniTS",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/run_pretrain.py",
      "args": [
        "--is_training", "1",
        "--model_id", "UniTS_pretrain_x128",    //实验名称标识符，用于保存权重文件
        "--model", "UniTS",
        "--prompt_num", "10",
        "--patch_len", "16",
        "--stride", "16",
        "--e_layers", "3",                      //encoder layer
        "--d_model", "128",                     //模型隐藏层维度
        "--des", "Exp",                         //实验描述，日志中使用
        "--acc_it", "128",                      //梯度累计部署，训练循环中，控制多少步骤累计一次梯度更新
        "--batch_size", "32",
        "--learning_rate", "5e-5",
        "--min_lr", "1e-4",
        "--weight_decay", "5e-6",
        "--train_epochs", "10",
        "--warmup_epochs", "0",
        "--min_keep_ratio", "0.5",              //掩码的最小保留比例
        "--right_prob", "0.5",                  //右侧掩码概率
        "--min_mask_ratio", "0.7",              //最少的掩码比例
        "--max_mask_ratio", "0.8",              //最大掩码比例
        "--debug", "disabled",                    
        "--task_data_config_path", "data_provider/multi_task_pretrain.yaml",
      ],
      "python": "${config:python.pythonPath}",
      "env": {
        "CUDA_VISIBLE_DEVICES": "0"  // Ensure it uses a single GPU (GPU 0)
      },
      "console": "integratedTerminal"
    }
  ]
}
